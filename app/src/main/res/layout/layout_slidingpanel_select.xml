<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_reserv_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#efefef"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_explain_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_explain_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/txt_explain_time"
                android:layout_toRightOf="@id/txt_explain_time"
                android:text="-"
                android:textSize="14sp"
                android:textStyle="italic" />
        </RelativeLayout>


        <TextView
            android:id="@+id/txt_explain_reserv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/explain_choose_feedee"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_reserv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_circle_bk1"
            android:maxWidth="260dp"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_oneline_bk"
            android:text="같이먹기"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>