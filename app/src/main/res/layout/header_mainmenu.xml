<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_menudate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#efefef">

    <LinearLayout
        android:id="@+id/layout_my_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/img_my_pic"
            android:layout_width="@dimen/profile_l"
            android:layout_height="@dimen/profile_l"
            android:src="@drawable/icon_noprofile_circle" />

        <TextView
            android:id="@+id/txt_my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="홍길동" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_go_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_my_box"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_circle_bk1"
        android:padding="10dp"
        android:text="로그인이 필요합니다."
        android:textAlignment="center"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/img_pay_heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_heart_wh" />

        <TextView
            android:id="@+id/txt_have_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/img_pay_heart"
            android:text="0" />
    </RelativeLayout>
</RelativeLayout>