<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_myfeed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="0dp"
    android:paddingRight="13dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/image_feedee"
        android:layout_width="@dimen/profile_s"
        android:layout_height="@dimen/profile_s"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_noprofile_circle"
        android:transitionName="img_user" />

    <TextView
        android:id="@+id/txt_feedeeName"
        android:layout_width="@dimen/profile_m"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/image_feedee"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="@string/applicant"
        android:transitionName="txt_userName" />

    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/txt_feedeeName"
        android:layout_height="wrap_content"
        android:padding="3dp" />
</RelativeLayout>
