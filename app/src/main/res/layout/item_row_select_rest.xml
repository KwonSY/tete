<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#efefef"
    app:cardCornerRadius="9dp">

    <RelativeLayout
        android:id="@+id/layout_card"
        android:layout_width="85dp"
        android:layout_height="85dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:gravity="center"
            android:text="이 지역&#10;음식점&#10;보기"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/img_rest"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_no_image" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22000000"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/layout_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/check_box_or"
                android:buttonTint="#00000000"
                android:scaleX="1.5"
                android:scaleY="1.5" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_restName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_rest"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:text="로딩중.."
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
