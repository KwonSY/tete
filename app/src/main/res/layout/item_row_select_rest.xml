<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="19dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="11dp"
    app:cardCornerRadius="9dp">

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/img_rest"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_no_image" />

        <RelativeLayout
            android:id="@+id/layout_like_yn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:visibility="gone">

            <ImageView
                android:id="@+id/icon_like_yn"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_heart_wh" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#01f9a953">

            <ImageView
                android:id="@+id/icon_check"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_check_or" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_restName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_rest"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:text="로딩중.."
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
