<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_req_feeder"
    android:layout_width="wrap_content"
    android:minWidth="118dp"
    android:layout_height="wrap_content"
    android:paddingTop="0dp">

    <ImageView
        android:id="@+id/img_feedee"
        android:layout_width="@dimen/profile_xm"
        android:layout_height="@dimen/profile_xm"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/icon_noprofile_circle"
        android:transitionName="img_user" />

    <ImageView
        android:id="@+id/btn_check_feedee"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_circle_check_or"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_feedee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_feedee"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="@string/applicant"
        android:textStyle="bold"
        android:textSize="12sp"
        android:transitionName="txt_userName" />

    <TextView
        android:id="@+id/txt_feedee_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_feedee_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-4dp"
        android:gravity="center_horizontal"
        android:text="30 / ë‚¨"
        android:textSize="12sp"
        android:transitionName="txt_userInfo"/>
</RelativeLayout>
